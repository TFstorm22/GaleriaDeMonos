<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Page1">
    <ContentPage.Content>
<Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image x:Name="MonkeyImage" Aspect="AspectFill" HeightRequest="200" />

            <StackLayout Grid.Row="1" Margin="10">
                <Label x:Name="NameLabel" FontAttributes="Bold" FontSize="24" />
                
                <Label Text="Location" FontAttributes="Bold" FontSize="18" />
                <Label x:Name="LocationLabel" FontSize="16" Margin="0,0,0,10" />

                <Label Text="Description" FontAttributes="Bold" FontSize="18" />
                <Label x:Name="DescriptionLabel" FontSize="16" Margin="0,0,0,10" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>